@using AciLabTestApp.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Student CRUD", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        var userLogin = (LoginViewModel) Session["login"];
                        if (userLogin != null)
                        {
                            <li>@Html.ActionLink(" Student Tutorials", "Tutorials", "Student", new { id = userLogin.StudentId, area = "" }, new { @class = "glyphicon glyphicon-file" })</li>
                            <li>@Html.ActionLink(" Student CourseList", "Courses", "Student", new { id = userLogin.StudentId, area = "" }, new { @class = "glyphicon glyphicon-list" })</li>
                            <li>@Html.ActionLink(" Student Result", "Results", "Student", new { id = userLogin.StudentId, area = "" }, new { @class = "glyphicon glyphicon-education" })</li>
                            <li>@Html.ActionLink(" Logout", "Logout", "Login", null, new {@class = "glyphicon glyphicon-log-out"})</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("API", "Index", "Help", new {area = ""}, null)</li>
                         <li>@Html.ActionLink(" Login", "Login", "Login", new { area = "" }, new{@class="glyphicon glyphicon-log-in"})</li>
                        }
                    }
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
